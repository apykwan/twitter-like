include ../mixins/mixins 

<!DOCTYPE html>
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    meta(charset='utf-8' content="font-src 'self' data:; img-src 'self' data:; default-src 'self' http://127.0.0:3003/")
    link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.5.13/cropper.min.css')
    link(rel='stylesheet', href='/css/bootstrap/bootstrap.min.css')
    link.css(rel="stylesheet", href="/css/main.css")
    title #{pageTitle} 
  body
    script.
      let userLoggedIn = !{userLoggedInJs};
    .wrapper 
      .row
        nav.col-2
          a.blue(href="/")
            i.fas.fa-dove
          a(href="/")
            i.fa-solid.fa-house
          a(href="/search")
            i.fas.fa-search
          a(href="/notifications")
            i.fas.fa-bell
            span#notificationBadge 8
          a(href="/messages")
            i.fas.fa-envelope
            span#messageBadge 8
          a(href=`/profile/${userLoggedIn && userLoggedIn.userName}`)
            i.fas.fa-user
          a(href="/logout")
            i.fas.fa-sign-out-alt
        .mainSectionContainer.col-10.col-md-8.col-lg-6 
          .titleContainer
            h1 #{pageTitle}
            block headerButton 
            
          block content
          
        .d-none.d-md-block.col-md-2.col-lg-4
          span third column
    #notificationList
    
    script(src='/fontawesome-6.2.1/js/all.min.js')
    script(src='/js/jquery-3.6.1.min.js')
    script(src='/js/popper-1.16.0.min.js')
    script(src='/js/bootstrap_js/bootstrap.min.js')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.5.13/cropper.min.js')
    script(src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/3.1.3/socket.io.min.js")

    block scripts
    script(src="/js/utils.js")
    script(src="/js/common.js")
    script(src="/js/clientSocket.js")